<form string="Financial Statement Template Line" col="4">
    <label name="template"/>
    <field name="template" colspan="3"/>
    <label name="code"/>
    <field name="code"/>
    <label name="name"/>
    <field name="name"/>
    <label name="parent"/>
    <field name="parent"/>
    <group id="value" yexpand="1" yfill="1" colspan="4" col="2">
        <group id="current_value" col="1" yexpand="1" yfill="1">
            <label name="current_value" xalign="0"/>
            <field name="current_value"/>
        </group>
        <group id="previous_value" col="1" yexpand="1" yfill="1">
            <label name="previous_value" xalign="0"/>
            <field name="previous_value"/>
        </group>
    </group>
    <group id="style" string="Style"  colspan="4">
        <label name="visible"/>
        <field name="visible"/>
        <label name="sequence"/>
        <field name="sequence"/>
        <label name="css_class"/>
        <field name="css_class"/>
    </group>
</form>
