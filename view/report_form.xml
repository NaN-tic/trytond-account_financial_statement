<form>
    <label name="name"/>
    <field name="name"/>
    <label name="template"/>
    <field name="template"/>
    <label name="company"/>
    <field name="company"/>
    <label name="comparison"/>
    <field name="comparison"/>
    <notebook>
        <page name="current_fiscalyear" string="Current">
                <label name="current_fiscalyear"/>
                <field name="current_fiscalyear" colspan="3"/>
                <field name="current_periods" colspan="4"/>
        </page>
        <page name="previous_fiscalyear" string="Comparison">
            <label name="previous_fiscalyear"/>
            <field name="previous_fiscalyear" colspan="3"/>
            <field name="previous_periods" colspan="4"/>
        </page>
        <page string="Lines" id="lines">
            <field name="lines" />
        </page>
    </notebook>
    <group id="state_buttons" colspan="4" col="-1">
        <group id="state" colspan="2">
            <label name="state"/>
            <field name="state"/>
            <label name="calculation_date"/>
            <field name="calculation_date"/>
        </group>
        <group id="buttons" colspan="4">
            <button name="calculate" string="Calculate"
                icon="tryton-go-next"/>
            <button name="draft" string="Draft"
                icon="tryton-go-previous"/>
        </group>
    </group>
</form>
